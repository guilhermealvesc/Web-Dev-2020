<%- include('partials/header'); %> 
<h1>Adicione um post</h1>
<form action="/compose" method="POST">
    <div class="form-group">
        <label for="title">Título</label>
        <input class="form-control" type="text" name="posttitle" placeholder="Digite o título do post"> 
    </div>
    <div class="form-group">
        <label for="text">Post</label>
        <textarea class="form-control" name="content" id="text" cols="30" rows="5" placeholder="Digite o conteudo do post"></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Publique</button>
</form>
<%- include('partials/footer'); %> 
